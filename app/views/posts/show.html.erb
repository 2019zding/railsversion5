<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% (0...@post.images.count).each do |image| %>
<div style="width:300px, height:300px;">
	<%= image_tag(@post.images[image], style:'width:20%; height:auto') %>
</div>
<% end %>

<%= link_to 'Download', @post.file %>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
